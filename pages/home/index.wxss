/* pages/home/index.wxss */
.page {
  background: linear-gradient(175deg, #FFFFFF 0%, #F2F2EC 100%);
  height: 100vh;
}

.IconBox {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin-bottom: 61rpx
}

.IconBox:first-child {
  margin: 205rpx  0 140rpx 0;
}

.IconBox .LOGO {
  width: 268rpx;
  height: 268rpx;
  margin: 0 auto 12rpx auto;
}

.IconBox .title {
  font-size: 38rpx;
  font-weight: 500;
  color: #999999;
}

.IconBox .text {
  font-size: 32rpx;
  font-weight: 400;
  color: #999999;
}

.IconBox .btnImg {
  width: 232rpx;
  height: 232rpx;
  margin: 0 auto;
}